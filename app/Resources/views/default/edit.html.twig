{% extends 'base.html.twig' %}

{% block title %}Editar Publicación{% endblock %}

{% block content %}
    <h2>Editar Publicación ID: {{ post.id }}</h2>
    <form action="{{ path('index.update',{'id' : post.id}) }}" method="post">
    	<div class="form-group">
    		<label for="title">Titulo</label>
    		<input type="text" name="title" class="form-control" placeholder="Titulo" value="{{ post.title }}">
    	</div>
    	<div class="form-group">
    		<label for="content">Contenido</label>
    		<textarea name="content" class="form-control" rows="10">{{ post.content }}</textarea>
    	</div>
    	<div class="form-group">
    		<label for="author_id">Autor</label>
    		<select name="author_id" class="form-control">
    			{% for author in authors %}
                    {% if(post.author.id == author.id ) %}
    				    <option value="{{ author.id }}" selected>{{ author.name }}</option>
                    {% else %}
                        <option value="{{ author.id }}">{{ author.name }}</option>
                    {% endif %}
    			{% endfor %}
    		</select>
    	</div>
    	<button class="btn btn-success">ACtualizar</button>
    	<a href="{{ path('index') }}" class="btn btn-danger">Cancelar</a>
    </form>
{% endblock %}